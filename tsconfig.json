{
	"compilerOptions": {
		"strict": true,
		"skipLibCheck": true,

		"target": "es6",
		"module": "es6",
		"declaration": false,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,

		"forceConsistentCasingInFileNames": true,
		"jsx": "preserve",
		"lib": ["es6", "dom", "dom.iterable"],
		"types": ["node"]
	},
	"exclude": ["node_modules", "dist", "examples"]
}
